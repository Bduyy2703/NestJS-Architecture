{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"  // Ensure the path to your TypeScript files is correct
  ],
  "exclude": [
    "node_modules"  // Exclude node_modules directory
  ]
}
